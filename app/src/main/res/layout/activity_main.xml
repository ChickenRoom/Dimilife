<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chickens.org.dimilife.front.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="432dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="432dp"
            android:background="@drawable/dimigo"
            android:id="@+id/dimi_imageview" />

        <chickens.org.dimilife.Widget.NotoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한국디지털미디어고등학교"
            android:layout_marginTop="216dp"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@drawable/gradient_bar"/>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator_default"
            android:layout_width="match_parent"
            android:layout_height="43.62dp"
            android:layout_centerInParent="true"
            app:ci_animator="@anim/indicator_animator"
            app:ci_animator_reverse="@anim/indicator_animator_reverse"
            app:ci_drawable="@drawable/white_radius"
            app:ci_height="10dp"
            app:ci_width="10dp"
            app:ci_margin="8.98dp"
            app:ci_gravity="right"
            android:paddingTop="23.62dp"
            android:paddingBottom="10dp"
            android:paddingRight="23.96dp"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>



</LinearLayout>
